      {
        \toprule
        \XSIMifblankTF {\ExerciseType}
          {}
          { \XSIMmixedcase { \GetExerciseParameter {exercise-name} } }
        &
        \XSIMmixedcase { \XSIMtranslate {points} } &
        \XSIMtranslate {reached} \\
        \midrule
      }
    \ForEachUsedExerciseByType
      {
        \XSIMifeqTF {#1} { \ExerciseTableType {#1} }
