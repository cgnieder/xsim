          }
          {}
      }
    \XSIMputright \ExerciseTableCode
      {
        \midrule
        \XSIMtranslate {total} &
        \XSIMifblankTF {\ExerciseType}
          { \TotalExerciseGoal {points} {} {} }
          { \TotalExerciseTypeGoal {\ExerciseType} {points} {} {} } &
        \\ \bottomrule
      }
    \XSIMexpandcode
      {
        \noexpand \begin {tabular} {\XSIMifblankTF{\ExerciseType}{l}{c}cc}
